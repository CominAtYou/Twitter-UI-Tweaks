{
    "manifest_version": 3,
    "name": "Twitter Sidebar Declutterer",
    "description": "Removes buttons and modals encouraging you to subscribe to Blue.",
    "version": "1.1.3",

    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*",
                "https://mobile.twitter.com/*",
                "https://mobile.x.com/*"
            ],
            "css": ["styles.css"]
        }
    ]
}
