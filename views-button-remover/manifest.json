{
    "manifest_version": 3,
    "name": "Twitter Views Button Remover",
    "version": "1.0.2",
    "description": "Removes the views button on timeline tweets.",
    "author": "CominAtYou",

    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*",
                "https://mobile.twitter.com/*",
                "https://mobile.x.com/*"
            ],
            "js": ["main.js"]
        }
    ]
}
